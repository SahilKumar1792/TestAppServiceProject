@model TaxAppealPlus.Models.BlogIndexViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <section class="blog_section">
        <div class="container">
            <div class="blog-subnav d-flex align-items-center justify-content-between mb-3">
                <h3 class="m-0">Blog</h3>
            </div>

            <div class="blog-filter-nav">
                <div class="filter-scroll">
                    <a href="/blog" class="filter-pill active">All</a>
                    <a href="/blog?sort=latest" class="filter-pill">Latest</a>
                    <a href="/blog?sort=popular" class="filter-pill">Popular</a>
                    <a href="/blog?sort=featured" class="filter-pill">Featured</a>
                </div>
            </div>
            <div class="row g-4">
                @foreach (var post in Model.Posts)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100">
                            @if (!string.IsNullOrWhiteSpace(post.FeaturedImage))
                            {
                                <img class="card-img-top" src="@post.FeaturedImage" alt="@post.Title" />
                            }
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@post.Title</h5>
                                <p class="text-muted mb-1"><small>@post.PublishedAt.ToString("MMMM d, yyyy")</small></p>
                              
                                <p class="card-text flex-grow-1">@post.Excerpt</p>
                                <a class="btn btn-link mt-2 p-0" href="/blog/@post.Slug">Read More</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Blog pagination" class="mt-4 d-flex justify-content-end align-items-center">
                    <a class="btn btn-link @(Model.Page == 1 ? "disabled" : string.Empty)" href="/blog?page=@(Model.Page - 1)">Previous</a>
                    <div>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            if (i == Model.Page)
                            {
                                <a class="btn btn-primary btn-sm me-1">@i</a>
                            }
                            else
                            {
                                <a class="btn btn-outline-primary btn-sm me-1" href="/blog?page=@i">@i</a>
                            }
                        }
                    </div>
                    <a class="btn btn-link @(Model.Page == Model.TotalPages ? "disabled" : string.Empty)" href="/blog?page=@(Model.Page + 1)">Next</a>
                </nav>
            }
        </div>
    </section>
 </main>



